#!/usr/bin/env ruby
require 'yaml'
require 'fileutils'
require 'pry'

$LOAD_PATH.unshift(File.join(File.dirname(__FILE__), "/../lib/duckula"))
require 'session'

begin
  session = Duckula::Session.new
  session.run(*ARGV)
rescue Interrupt
  session.stop
end


